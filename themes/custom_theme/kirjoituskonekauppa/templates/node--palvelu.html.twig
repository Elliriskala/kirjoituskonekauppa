{% block content %}
  <section class="product-title">
    <h1>{{ content.field_title }}</h1>
  </section>

  <div class="product-layout">
    <div class="product-image">
      {{ content.field_thumbnail }}
    </div>
    <div class="product-description">
      {{ content.body }}
    </div>
  </div>
{% endblock %}
